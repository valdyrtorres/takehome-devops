apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
  - host: localhost
    http:
      paths:
      - path: /api/userinfo
        pathType: Prefix
        backend:
          service:
            name: auth-service
            port:
              number: 8037
      - path: /feed/patriota
        pathType: Prefix
        backend:
          service:
            name: feed-service
            port:
              number: 3000
      - path: /feed/premium
        pathType: Prefix
        backend:
          service:
            name: feed-service
            port:
              number: 3000